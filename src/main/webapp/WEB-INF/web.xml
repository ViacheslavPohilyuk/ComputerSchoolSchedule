<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
	      http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">

    <display-name>StudentsAssistant</display-name>

    <servlet>
        <servlet-name>ServletURIProcessing</servlet-name>
        <servlet-class>org.computer.school.schedule.app.servlet.entities.ServletURIProcessing</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>authorization</servlet-name>
        <servlet-class>org.computer.school.schedule.app.servlet.authorization.AuthorizationServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServletURIProcessing</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>authorization</servlet-name>
        <url-pattern>/authorization</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>

    <listener>
        <listener-class>org.computer.school.schedule.ContextListener</listener-class>
    </listener>

</web-app>
